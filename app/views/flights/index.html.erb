<h1>List of Flights</h1>
<% @flights.each do |flight| %>
  <p>Flight: <%= flight.number %> -
  <%= flight.airline.name %></p>
  <p>Passengers: <% flight.passengers.each do |passenger| %></p>
  <section id="passenger-<%= passenger.id %>">
    <p><%= passenger.name %>-
    <%= link_to "Remove Passenger", ticket_path(flight.id, passenger_id: passenger.id), method: :delete %></p>
  <% end %>
  </section>
<% end %>
